on:
  workflow_dispatch:
  schedule:
    - cron:  '0 */2 * * *'

jobs:
  release:
    name: Create Release
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2
      - name: Create Release
        id: create_release
        uses: actions/create-release@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          tag_name: ${{ vars.GITHUB_RUN_ID }}
          release_name: Release ${{ vars.GITHUB_RUN_ID }}
          body: |
            Automated Release.
          draft: false
          prerelease: false
